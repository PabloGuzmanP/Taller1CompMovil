<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Juego">

    <TextView
        android:id="@+id/texto_inicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Guess the number ðŸ˜±"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/numero_ingresado"
        android:hint="Ingrese el numero"
        android:alpha=".50"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:inputType="number"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/texto_inicial" />

    <Button
        android:id="@+id/boton_adivinar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="38dp"
        android:text="Adivinar"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="adivinar"
        app:layout_constraintTop_toBottomOf="@+id/numero_ingresado" />

</androidx.constraintlayout.widget.ConstraintLayout>